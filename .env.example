# =====================================================
# CreditPreneurs x Koiz Platform - Environment Configuration
# Copy this file to .env and fill in your actual values
# =====================================================

# ================== STRIPE CONFIGURATION ==================
# Get these from https://dashboard.stripe.com/apikeys
STRIPE_PUBLISHABLE_KEY=pk_test_your_key_here
STRIPE_SECRET_KEY=sk_test_your_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# ================== TELNYX CONFIGURATION ==================
# Get these from https://portal.telnyx.com
TELNYX_API_KEY=KEY_your_key_here
TELNYX_API_SECRET=your_api_secret
TELNYX_MESSAGING_PROFILE_ID=your_profile_id

# Phone Numbers
CREDITPRENUERS_PHONE=+1XXXXXXXXXX
COYSLOGISTICS_PHONE=+1XXXXXXXXXX

# ================== ModCRM CONFIGURATION ==================
MODCRM_API_URL=https://api.modcrm.local
MODCRM_API_KEY=your_modcrm_api_key

# Business Container IDs
CREDITPRENUERS_BUSINESS_ID=BC_CREDITPREN_STAGING
COYSLOGISTICS_BUSINESS_ID=BC_COYSLOG_STAGING

# ================== PITCH MARKETING INTEGRATION ==================
PITCH_MARKETING_API_URL=https://api.pitchmarketingagency.com
PITCH_MARKETING_API_KEY=your_pitch_api_key
PITCH_MARKETING_WEBHOOK_SECRET=your_webhook_secret

# ================== DEPLOYMENT - CREDITPRENUERS.COM ==================
# GoDaddy/Ionos FTP Credentials
CREDITPRENUERS_FTP_HOST=ftp.creditprenuers.com
CREDITPRENUERS_FTP_USER=your_ftp_user
CREDITPRENUERS_FTP_PASS=your_ftp_password

# Alternative: SSH/SFTP
CREDITPRENUERS_SSH_HOST=server.creditprenuers.com
CREDITPRENUERS_SSH_USER=your_ssh_user
CREDITPRENUERS_REMOTE_DIR=/var/www/creditprenuers.com/public_html

# ================== DEPLOYMENT - COYSLOGISTICS.COM ==================
# GoDaddy/Ionos FTP Credentials
COYSLOGISTICS_FTP_HOST=ftp.coyslogistics.com
COYSLOGISTICS_FTP_USER=your_ftp_user
COYSLOGISTICS_FTP_PASS=your_ftp_password

# Alternative: SSH/SFTP
COYSLOGISTICS_SSH_HOST=server.coyslogistics.com
COYSLOGISTICS_SSH_USER=your_ssh_user
COYSLOGISTICS_REMOTE_DIR=/var/www/coyslogistics.com/public_html

# ================== EXPO/MOBILE APP ==================
EXPO_USERNAME=your_expo_username
EXPO_PROJECT_ID=your_expo_project_id

# ================== DATABASE ==================
# If using external database
DATABASE_URL=postgresql://user:password@localhost:5432/modcrm

# ================== MISC ==================
NODE_ENV=development
LOG_LEVEL=debug

# =====================================================
# IMPORTANT NOTES:
# 1. Never commit this file with real credentials
# 2. Add .env to your .gitignore
# 3. For production, use secure secret management
# =====================================================
